// prisma/schema.prisma

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL") // MongoDB connection URL from your environment variables
}

generator client {
  provider = "prisma-client-js"
}

model UserPreferences {
  id                String   @id @default(auto()) @map("_id") @db.ObjectId
  userId            String
  interests         String[] // Array of strings representing user interests (e.g., 'finance', 'technology')
  preferencesTimestamp DateTime @default(now())
}
